<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.O//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="triangle" class="com.okres.Triangle">

        <property name="pointA" ref="zeroPoint"/>

        <property name="pointB">
            <bean class="com.okres.Point">
                <property name="x" value="-20"/>
                <property name="y" value="0"/>
            </bean>
        </property>

        <property name="pointC">
            <bean class="com.okres.Point">
                <property name="x" value="20"/>
                <property name="y" value="0"/>
            </bean>
        </property>

    </bean>

    <bean id="zeroPoint" class="com.okres.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <alias name="triangle" alias="t"/>
</beans>
